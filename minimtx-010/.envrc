export PROJECT_HOME=$(pwd)
export PROJECT_NAME="minimtx"

PATH=$PROJECT_HOME/scripts:$PATH

## ALIASES FOR elastnow
alias cmd="alias | grep 'x_'"

## INSTALL/UNINSTALL COMMANDS
alias x_up="docker-compose up -d"
alias x_start="docker-compose start"
alias x_stop="docker-compose stop"
alias x_rm="docker-compose -f $PROJECT_HOME/docker-compose.yml down -v"
